<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="U4-W3-D5-TEST">
        <!-- Il nome della persistence unit è importante e ci servirà usarlo dopo nel codice JAVA -->
        <!-- Se non dichiaro le mie entities qua, non le troverà e non creerà automaticamente le tabelle -->
        <class>amintabite.entities.Utente</class>
        <class>amintabite.entities.Elemento</class>
        <class>amintabite.entities.Prestito</class>
        <class>amintabite.entities.Libro</class>
        <class>amintabite.entities.Rivista</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/U4-W3-D5-TEST"/>
            <!-- Dopo l'ultimo slash devo inserire il nome del database (QUESTO DEVE ESISTERE PERO') -->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Quest'impostazione chiede a Hibernate di crearci le tabelle (se non esistono ancora) all' avvio dell'applicazione
                 oppure aggiornarle se necessario -->
        </properties>
    </persistence-unit>
</persistence>